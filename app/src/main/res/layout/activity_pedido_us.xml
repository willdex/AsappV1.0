<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pedido_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grayhartcorp.quevengan.Pedido_us"
    android:background="@color/colorPrimary"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map_u"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|bottom"
            android:layout_weight="0"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/Ll_cancelar"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:id="@+id/cancelar"
                    style="@style/submit"
                    android:layout_weight="1"
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp"
        android:layout_marginTop="20sp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8sp"
            android:background="@android:drawable/dialog_holo_light_frame"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:background="@drawable/circulo"
                >



            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginRight="10sp"
                android:src="@mipmap/ic_perfil"
                android:id="@+id/imagen_moto"
                android:layout_gravity="center_horizontal|bottom"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Motista"
                    android:id="@+id/nombre_moto"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"

                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefono del Motista"
                    android:textStyle="bold"
                    android:id="@+id/celular"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiempo"
                    android:textSize="30sp"
                    android:id="@+id/tv_tiempo"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_notificacion"
            android:background="@android:drawable/dialog_holo_light_frame"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="notificacion"
                android:textColor="@color/colorPrimary"
                android:padding="10sp"
                android:textSize="@dimen/Texto_mediano"
                android:background="@drawable/bk_circulo"
                android:id="@+id/tv_notificacion"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>